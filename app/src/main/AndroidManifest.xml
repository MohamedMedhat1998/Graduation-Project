<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mohamed.medhat.sanad">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".dagger.DaggerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/Theme.GraduationProject"
        tools:ignore="LockedOrientationActivity">
        <activity
            android:name=".ui.places_activity.PlacesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.add_person_activity.AddPersonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.persons_manager_activity.PersonsManagerActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.main_activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.add_blind_activity.AddBlindActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.q_r_activity.scanner.ScannerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarWhiteText" />
        <activity
            android:name=".ui.q_r_activity.QRActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.confirmation_activity.ConfirmationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.mentor_picture_activity.MentorPictureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.registration_activity.RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.login_activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText" />
        <activity
            android:name=".ui.on_boarding_activity.OnBoardingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarWhiteText" />
        <activity
            android:name=".ui.splash_activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarBlackText">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>