<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_add_person_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/splash_circle"
        android:padding="24dp"
        android:src="@drawable/ic_plus_holo_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_add_person_label"
        style="@style/SanadRegularBlueText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:text="@string/add_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_add_person_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_item_add_person_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_add_person_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>