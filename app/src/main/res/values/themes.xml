<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduationProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ActionBarBlackText" parent="Theme.GraduationProject">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimary">@color/sanad_yellow</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ActionBarWhiteText" parent="Theme.GraduationProject">
        <item name="colorPrimaryVariant">@color/sanad_back_blue</item>
        <item name="colorPrimary">@color/sanad_yellow</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="SanadRegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_white_font</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="SanadAddBlindText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sanad_grey_hint</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="SanadNextButton">
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_text_blue</item>
        <item name="android:background">@drawable/next_button_background</item>
    </style>

    <style name="SanadSkipButton">
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_white_font</item>
    </style>

    <style name="SanadTitle">
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textColor">@color/sanad_text_blue</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SanadRegularBlueText">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textColor">@color/sanad_text_blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SanadBoldBlueText" parent="SanadRegularBlueText">
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>

    <style name="SanadInputField">
        <item name="android:background">@drawable/login_et_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/sanad_grey_hint</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="SanadConfirmationField">
        <item name="android:background">@drawable/confirmation_input_background</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/sanad_grey_hint</item>
    </style>

    <style name="SanadSubmitButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/submit_button_background</item>
        <item name="android:textColor">@color/sanad_off_white</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SanadGreyButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/sanad_grey_button_background</item>
        <item name="android:textColor">@color/sanad_back_blue</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SanadFacebookLogin" parent="SanadSubmitButton">
        <item name="android:background">@drawable/facebook_button_background</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SanadGoogleLogin" parent="SanadFacebookLogin">
        <item name="android:background">@drawable/google_button_background</item>
    </style>

    <style name="SanadBottomPlacesButton">
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sanad_off_white</item>
    </style>

    <style name="SanadRadioButton" parent="SanadGreyButton">
        <item name="android:background">@drawable/radio_button_background_selector</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/radio_button_text_color_selector</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SanadFeatureButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingTop">26dp</item>
        <item name="android:fontFamily">@font/cairo_semi_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sanad_off_white</item>
    </style>

    <style name="SanadPreviousButton">
        <item name="android:background">@drawable/btn_previous_background</item>
        <item name="android:drawableLeft">@drawable/ic_previous</item>
        <item name="android:textColor">@color/sanad_off_white</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>