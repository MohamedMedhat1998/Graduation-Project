<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduationProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarBlackText" parent="Theme.GraduationProject">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ActionBarWhiteText" parent="Theme.GraduationProject">
        <item name="colorPrimaryVariant">@color/sanad_back_blue</item>
        <item name="colorPrimary">@color/sanad_yellow</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="SanadRegularFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_white_font</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="SanadNextButton">
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_text_blue</item>
        <item name="android:background">@drawable/next_button_background</item>
    </style>

    <style name="SanadSkipButton">
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sanad_white_font</item>
    </style>
</resources>